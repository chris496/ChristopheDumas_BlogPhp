{% extends "base.html.twig" %}

{% block body %}
	{% if error %}
		<div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
			Veuillez renseigner correctement tous les champs ! (mot de passe fort)
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
	{% elseif vide %}
		<div class="alert alert-danger alert-dismissible fade show text-center" role="alert">
			Veuillez renseigner tous les champs !
			<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
		</div>
		{% else %}
	{% endif %}
	<div class="ms-2 mt-2">
		<a class="btn btn-primary btn-sm" href="{{ url }}/accueil">Retour à l'accueil</a>
	</div>
	<div class="container">
		<div class="row d-flex justify-content-center align-items-center my-5">
			<div class="col-6">
				<h2 class="text-center my-5">Formulaire d'inscrition</h2>
				<form action="userRegistration" method="post">
					<div class="input-group mb-3">
						<input type="text" class="form-control" id="lastname" name="lastname" placeholder="Nom" aria-label="lastname" aria-describedby="basic-addon1">
					</div>
					<div class="input-group mb-3">
						<input type="text" class="form-control" id="firstname" name="firstname" placeholder="Prénom" aria-label="firstname" aria-describedby="basic-addon2">
					</div>
					<div class="input-group mb-3">
						<input type="email" class="form-control" type="email" id="email" name="email" placeholder="Adresse mail" aria-label="email" aria-describedby="basic-addon3">
					</div>
					<div class="input-group mb-3">
						<input type="password" class="form-control" type="password" id="password" name="password" placeholder="Mot de passe" aria-label="password" aria-describedby="basic-addon4">
					</div>
					<div class="text-center mt-3">
						<input class="btn btn-primary mb-3" type="submit"/>
						<br>
						<span>(attention votre compte sera actif uniquement après validation d'un modérateur)</span>
					</div>
				</form>
			</div>
		</div>
	</div>
{% endblock %}
